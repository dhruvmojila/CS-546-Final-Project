<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>User Id</th>
      <th>role</th>
      <th>
        <div class="add">
          <a href="/users/addUser" class="button">+ Add</a>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.userId}}</td>
        <td>{{this.role}}</td>
        <td>
          <form action="/users/delete/{{this._id}}" method="post">
            <a href="/users/addUser/{{this._id}}" class="button">Edit</a>
            <button type="submit" class="button">
              Delete
            </button>
          </form>
        </td>
      </tr>

    {{/each}}
  </tbody>
</table>