<form action='/questions/{{question.id}}/create-question' method='POST'>
	<label for='question_text'>Question:</label>
	<input
		type='text'
		id='question_text'
		name='questionText'
		value='{{question.questionText}}'
		required
	>

	{{#if
		(or
			(isEqual question.type 'single_select')
			(isEqual question.type 'multi_select')
		)
	}}
		<h3>Options</h3>
		<ul id='options_list'>
			{{#each question.options}}
				<li id='option_{{@index}}'>
					<label for='option_input_{{@index}}'>Option
						{{add @index 1}}:</label>
					<input
						type='text'
						id='option_input_{{@index}}'
						name='options[]'
						value='{{this}}'
						required
					>
					<button
						type='button'
						class='delete-option'
						data-index='{{@index}}'
					>Delete</button>
				</li>
			{{/each}}
		</ul>
		<button type='button' id='add_option'>Add Option</button>
	{{/if}}

	{{#if (isEqual question.type 'rating')}}
		<label for='scale'>Rating scale:</label>
		<input
			type='number'
			id='scale'
			name='scale'
			value='{{question.scale}}'
			min='3'
			max='10'
			required
		>
	{{/if}}

	<label for='category'>Question Category:</label>
	<select name='category' id='category'>
		{{#each categories}}
			<option value='{{this}}'>{{this}}</option>
		{{/each}}
		<option value='other'>Other</option>
	</select>

	<div id='new_question_category' style='display: {{#if categories}}none{{else}}block{{/if}};'>
		<label for='new_category'>New Category:</label>
		<input type='text' id='new_category' name='newCategory'>
	</div>
    <input type="hidden" name="type" value="{{question.type}}" />
	<button type='submit'>Save Question</button>
</form>

<script src='../public/js/createQuestion.js'></script>