<div id="forgot_password_container">
    <h1 id="title">Forgot Password</h1>
    <p id="instruction">
        Enter your registered email address, and we'll send you a link to reset your password.
    </p>
    <div class="formDiv">
        <form action="/auth/forgot-password" method="post" name="forgotPasswordForm" id="forgotPasswordForm">
            <label for="email">Email Address
                <input type="email" id="email" name="email" required placeholder="Enter your email address">
            </label>

            <button type="submit" id="submit_button" name="submit_button">Send Reset Link</button>
        </form>
    </div>

    <div id="link">
        <a href="/auth/login">Back to Login</a>
    </div>
</div>

<script src="../public/js/forgotPassword.js"></script>