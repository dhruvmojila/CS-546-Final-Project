<table class="table">
  <thead>
    <tr>
      <th>Survey Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
    <tbody>
      {{#each surveyCollection}}
        <tr>
          <td>{{this.surveyName}}</td>
          <td>{{this.startDate}}</td>
          <td>{{this.endDate}}</td>
          <td>{{this.status}}</td>
          <td>
            <form action="/survey/delete/{{this._id}}" method="post">
              <a href="/survey/edit/{{this._id}}" class="button">Edit</a>
              <button type="submit" class="button">
                Delete
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
</table>
