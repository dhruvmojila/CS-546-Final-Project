<div class="add-form">
  <form action="/users/addUser" method="post">
    <input type="hidden" name="_id" value="{{user._id}}" />
    <div class="form">
      <label>First Name</label>
      <input
        id="firstName"
        class="form-control"
        name="firstName"
        placeholder="firstName"
        required
        value="{{user.firstName}}"
      />
    </div>
    <div class="form">
      <label>Last Name</label>
      <input
        class="form-control"
        id="lastName"
        name="lastName"
        placeholder="lastName"
        required
        value="{{user.lastName}}"
      />
    </div>
    {{! <div class="row mb-3">
      <div class="col"> }}
    <div class="form">
      <label>Email</label>
      <input
        id="email"
        name="email"
        class="form-control"
        placeholder="email"
        required
        value="{{user.email}}"
      />
      {{! </div> }}
    </div>
    {{! <div class="col"> }}
    <div class="form">
      <label>Password</label>
      <input
        id="password"
        class="form-control"
        name="password"
        placeholder="password"
        required
        value="{{user.password}}"
      />
    </div>
    {{! </div> }}
    {{! <div class="col"> }}
    <div class="form">
      <label>Username</label>
      <input
        class="form-control"
        id="username"
        name="username"
        placeholder="username"
        required
        value="{{user.username}}"
      />
    </div>
    {{! </div> }}
    {{! <div class="col"> }}
    <div class="form">
      <label>Role</label>
      <input
        class="form-control"
        id="role"
        name="role"
        placeholder="role"
        required
        value="{{user.role}}"
      />
    </div>
    {{! </div>
      <div class="col"> }}
    <div class="form">
      <label>Survey</label>
      <input
        class="form-control"
        id="survey"
        name="survey"
        placeholder="survey"
        required
        value="{{user.survey}}"
      />
    </div>
    {{! </div> }}
    {{! </div> }}
    <div>
      <a href="/users/" class="button">â˜° View All</a>
      <button type="submit" class="button">
